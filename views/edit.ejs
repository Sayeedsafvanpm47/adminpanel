
<%- include('head') -%>
<body style="background-image: url('/public/edituser.jpg'); background-size: contain; background-position: center; background-repeat: no-repeat; background-color: inherit;">
  <h1 class="text-center display-4" style="font-weight: bold; color: rgba(214, 53, 8, 0.61); font-family: Georgia, 'Times New Roman', Times, serif;">Edit User</h1>  
 

      <div class="container registration-form" style="width: 40%;">
        <div class="form-group">

          <form method="post" action="/admin/update/<%= user._id %>" style="background-color: rgba(2, 110, 40, 0.372); border-radius: 30px; box-shadow: 5px 5px 10px #888888;">
            <div class="text-center" style="background-color: rgba(245, 245, 245, 0.518);" >
              <% if (messages.error) { %>
                  <p class="error-message text-danger" style="font-size: 20px; font-weight: bold;">
                    <%= messages.error %>
                  </p>
                <% } %>
            </div>  
            
            <div class="form-group">
                  <input type="text" class="form-control item" id="fname" name="firstname" placeholder="<%= user.firstname  %>">
              </div>
              <div class="form-group">
                  <input type="text" class="form-control item" id="lname" name="lastname" placeholder="<%= user.lastname  %>">
              </div>
            <div class="form-group ">
                <input type="text" class="form-control item" id="email" name="email" placeholder="<%= user.email  %>">
               
              </input>
            </div>
            <div class="form-group">
                  <div class="form-group">
                            <input type="text" class="form-control item" name="phonenumber" id="phone-number" placeholder="<%= user.phonenumber  %>">
                        </div>
                <input type="password" class="form-control item" id="password" name="password" placeholder="Password">
               
        </div>
            
          
            <div class="form-group">
                  <input type="submit" class="btn btn-block create-account" value="UpdateUser">
            
            </div>
          </form>
          </div>
      </div>
      <div class="text-center">
        <button class="btn btn-danger" style="height: 40px; width: 200px; margin-bottom: 10px; margin-top: -30px; border-radius: 20px;"><a class="text-white" style="text-decoration: none;" href="/admin/view">Go Back</a></button></div>
      </div>
    <%- include('foot') -%>




    